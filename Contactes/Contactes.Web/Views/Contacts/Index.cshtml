@model IEnumerable<Contactes.Web.Models.Contact>

<h1>Contact List</h1>
<a  asp-controller="Contacts" asp-action="Create">Create New</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Name</td>
                <td>@contact.Email</td>
                <td>@contact.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@contact.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-idToDelete="@contact.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
